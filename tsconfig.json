{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@backend/*": ["./backend/*"],
      "@frontend/*": ["./frontend/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
